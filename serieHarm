import java.util.Scanner;
public class serieHarm {
    public static void main(String[] args) {
        int n = 0,c = 1;
        double h = 0;
        Scanner in = new Scanner(System.in);
        System.out.println("Digite um num√©ro");
        n = in.nextInt();
        
        for(int i = 0;i<n;i++){
            h += (c/i); 
        }
        System.out.println("serie harmonica " + (h + 1));
    }
    
    
}
